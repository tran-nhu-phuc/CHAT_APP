    "quill-mention": "^4.1.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-contenteditable": "^3.3.7",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-icons": "^5.1.0",
    "react-redux": "^9.1.1",
    "react-router-dom": "^6.20.0",
    "react-sortable-hoc": "^2.0.0",
    "react-spinners": "^0.13.8",
